type User {
    id: ID!
    name: String!
    score: Int
    level: Int
    ranking: Ranking
    learnPath: LearnPath
}

type Ranking{
    eventsWon: Int
    challengesWon: Int
}

type LearnPath{
    completed: Int
    ongoing: Int
    left: Int
}

type Query {
  allUsers: [User]
  user(id: ID!): User
  userByName(name: String!): User
}

schema {
    query: Query
    mutation: Mutation
}

type Mutation {
  createUser(name: String!, score: Int, level: Int): User
}
